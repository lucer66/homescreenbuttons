<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC0033">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="383dp"
        android:layout_height="76dp"
        android:layout_below="@+id/view2"
        android:text="Do you have a keen eye and ear for the stories op people and brands? Are you creative with text and image and facinated by the world of media? Then the communication course is for you!"
        android:textColor="#FFFFFF"
         />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="170dp"
        android:layout_height="166dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/cmi" />

    <Button
        android:id="@+id/informaticaClick"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="false"
        android:text="Informatica"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/techinformaticaClick"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:text="Technische Informatica"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/communicationClick"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:text="Communication"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
         />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="348dp"
        android:layout_height="80dp"
        android:layout_below="@+id/lijn1"
        android:text="We train you to be a software engineer. You get started with the development of software for various applications. You are able to analyze design and implement complex IT systems"
        android:textColor="#FFFFFF"
         />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="383dp"
        android:layout_height="70dp"
        android:layout_below="@id/view"
        android:text="As a technical computer scientist you work on modern IT systems in which hardware and software are integrated. Thanks to programming and hardware knowledge, you can operate at the intersection thereof."
        android:textColor="#FFFFFF"
       />

    <View
        android:id="@+id/lijn1"
        android:layout_width="315dp"
        android:layout_height="3dp"
        android:layout_below="@+id/informaticaClick"


        android:background="@android:color/white"
        />

    <View
        android:id="@+id/view"
        android:layout_width="315dp"
        android:layout_height="3dp"
        android:layout_below="@+id/techinformaticaClick"
        android:background="@android:color/white"
        />

    <View
        android:id="@+id/view2"
        android:layout_width="315dp"

        android:layout_height="3dp"
        android:layout_below="@+id/communicationClick"
        android:background="@android:color/white"
        />




</RelativeLayout>